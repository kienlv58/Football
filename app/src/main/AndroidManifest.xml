<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.two.football">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".view.activity.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.ClubActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.activity.InfoClubActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.activity.ResultsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.activity.ListResultsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.activity.VideoFavoriteActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.activity.VideoPlusActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.activity.PlayVideoActivity"
            android:configChanges="orientation|screenSize"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".view.activity.ToolbarActivity" />
        <activity android:name=".view.activity.AboutActivity"/>
    </application>

</manifest>