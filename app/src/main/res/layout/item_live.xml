<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <TableRow android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/guestTeam"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Chelsea"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center|right"/>

        <ImageView
            android:id="@+id/imgGuest"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_chel"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </TableRow>
    <TextView
        android:id="@+id/videoType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trực tiếp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#D50000"
        android:layout_gravity="center"/>

    <TableRow android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_mu"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/homeTeam"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Manchester"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:gravity="center|left"/>

    </TableRow>


</LinearLayout>