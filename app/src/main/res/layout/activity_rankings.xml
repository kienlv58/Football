<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEBE9"
    tools:context="com.two.football.view.activity.RankingsActivity">

    <include layout="@layout/activity_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_spinner">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/soccer"/>
        <Spinner
            android:layout_weight="4"
            android:id="@+id/spinRound"
            android:layout_width="0dp"
            android:layout_height="40dp">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#BBDEFB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleBattle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Trận"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/titleWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:text="T"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/titleDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="H"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/titleLose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="27dp"
                android:text="B"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/titleOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="HS"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/titleTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Đ"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <ListView
            android:id="@+id/listRankings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

        </ListView>

    </LinearLayout>

</LinearLayout>
